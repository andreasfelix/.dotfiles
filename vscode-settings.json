{
  /* Behavior */
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,
  "update.mode": "manual", /* disable update notifications */
  "git.confirmSync": false,
  "explorer.confirmDragAndDrop": false,
  /* Looks */
  "workbench.colorTheme": "GitHub Light Default",
  "workbench.iconTheme": "file-icons",
  "workbench.editor.tabSizing": "shrink",
  "window.menuBarVisibility": "toggle",
  /* Editor */
  // "files.insertFinalNewline": true, /* conflicts with default HTML formatter */
  "editor.bracketPairColorization.enabled": true,
  "editor.cursorBlinking": "solid",
  "editor.fontLigatures": true,
  "editor.fontFamily": "JetBrains Mono",
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.mouseWheelZoom": true,
  "editor.renderControlCharacters": true,
  "editor.renderLineHighlight": "gutter",
  "editor.renderWhitespace": "trailing",
  "editor.scrollBeyondLastColumn": 0,
  "editor.rulers": [
    88,
    100,
    120
  ],
  "[markdown]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 88
  },
  /* SSH */
  "remote.SSH.useLocalServer": false,
  /* HTML */
  "emmet.triggerExpansionOnTab": true,
  /* Python */
  "python.languageServer": "None", /* Use Pyright extension! */
  "python.formatting.provider": "black",
  "python.linting.pylintArgs": [
    "--generate-members"
  ],
  /* C/C++ */
  "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 4 }",
  /* Rust */
  "rust-analyzer.checkOnSave.command": "clippy",
  "rust-analyzer.server.path": "~/.nix-profile/bin/rust-analyzer",
  /* Nix */
  "nix.enableLanguageServer": true,
  /* Windi CSS */
  "windicss.sortOnSave": true,
  /* PLUGINS */
  "cSpell.enabledLanguageIds": [
    "markdown",
    "plaintext"
  ],
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.host": "0.0.0.0",
  /* Meson */
  "mesonbuild.configureOnOpen": false,
  "mesonbuild.buildFolder": "build",
  /* Neovim */ // does not support remote :(
  // "vscode-neovim.neovimExecutablePaths.linux": "/home/felix/.nix-profile/bin/nvim",
  "vscode-neovim.useCtrlKeysForNormalMode": false,
  "vscode-neovim.useCtrlKeysForInsertMode": false,
  /* VSCodeVim */
  "vim.enableNeovim": true,
  "vim.neovimPath": "/home/felix/.nix-profile/bin/nvim",
  "vim.foldfix": true,
  "vim.useCtrlKeys": false,
  "vim.handleKeys": {
    "<C-c>": false,
    "<C-d>": false,
  },
  "vim.hlsearch": true,
  "vim.camelCaseMotion.enable": true,
  "vim.easymotion": true,
  "vim.easymotionMarkerForegroundColorOneChar": "#000",
  "vim.easymotionMarkerForegroundColorTwoCharFirst": "#000",
  "vim.easymotionMarkerForegroundColorTwoCharSecond": "#000",
  "vim.easymotionMarkerBackgroundColor": "#FFDF5D",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        " "
      ],
      "after": [
        "<leader>",
        "<leader>",
        "<leader>",
        "b",
        "d",
        "w"
      ]
    },
    {
      "before": [
        "<leader>",
        "v"
      ],
      "after": [
        "ctrl+v"
      ]
    },
    {
      "before": [
        ">"
      ],
      "commands": [
        "editor.action.indentLines"
      ]
    },
    {
      "before": [
        "<"
      ],
      "commands": [
        "editor.action.outdentLines"
      ]
    },
    {
      "before": [
        "<leader>",
        " "
      ],
      "commands": [
        ":nohl"
      ]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [
        ">"
      ],
      "commands": [
        "editor.action.indentLines"
      ]
    },
    {
      "before": [
        "<"
      ],
      "commands": [
        "editor.action.outdentLines"
      ]
    }
  ],
  "grammarly.domain": "academic"
}