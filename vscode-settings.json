{
  // "docker.host": "ssh://b2stud02",
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,
  "workbench.editor.tabSizing": "shrink",
  "window.menuBarVisibility": "visible",
  "window.titleBarStyle": "custom",
  /* Editor */
  "editor.mouseWheelZoom": true,
  "editor.fontSize": 14,
  "editor.fontFamily": "JetBrains Mono, Ubuntu Mono",
  "editor.formatOnSave": true,
  "editor.renderLineHighlight": "gutter",
  "editor.cursorBlinking": "solid",
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "editor.scrollBeyondLastColumn": 0,
  // "editor.lineNumbers": "relative",
  "editor.tabCompletion": "on",
  "editor.rulers": [
    88,
    100,
    120
  ],
  "[markdown]": {
    "editor.wordWrapColumn": 88,
    "editor.wordWrap": "wordWrapColumn"
  },
  "emmet.triggerExpansionOnTab": true,
  /* Formatting */
  // "files.insertFinalNewline": true, /* conflicts with default HTML formatter */
  /* Python */
  "python.formatting.provider": "black",
  "python.dataScience.askForKernelRestart": false,
  "python.testing.pytestEnabled": true,
  "python.linting.pylintArgs": [
    "--generate-members"
  ],
  "python.testing.autoTestDiscoverOnSaveEnabled": false,
  "python.dataScience.sendSelectionToInteractiveWindow": false,
  "python.terminal.activateEnvironment": false,
  /* C/C++ */
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "C_Cpp.updateChannel": "Insiders",
  "C_Cpp.clang_format_fallbackStyle": "\"{ BasedOnStyle: Google, IndentWidth: 4 }\"",
  /* PLUGINS */
  "cSpell.enabledLanguageIds": [
    "markdown",
    "plaintext",
  ],
  "bracket-pair-colorizer-2.colors": [
    "#0a3d62",
    "#e58e26",
    "#079992"
  ],
  "bracket-pair-colorizer-2.unmatchedScopeColor": "#b71540",
  "bracket-pair-colorizer-2.showHorizontalScopeLine": false,
  "bracket-pair-colorizer-2.showVerticalScopeLine": false,
  "explorer.confirmDragAndDrop": false,
  "liveServer.settings.donotShowInfoMsg": true,
  "gitlens.advanced.telemetry.enabled": false,
  "liveServer.settings.host": "0.0.0.0",
  "mesonbuild.configureOnOpen": true,
  /* VIM */
  "vim.leader": ",",
  "vim.useCtrlKeys": false,
  "vim.handleKeys": {
    "<C-c>": false,
    "<C-d>": false,
  },
  "vim.camelCaseMotion.enable": true,
  "vim.easymotion": true,
  "vim.easymotionMarkerForegroundColorOneChar": "#000",
  "vim.easymotionMarkerForegroundColorTwoChar": "#000",
  "vim.easymotionMarkerBackgroundColor": "#FFDF5D",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        " "
      ],
      "after": [
        "<leader>",
        "<leader>",
        "<leader>",
        "b",
        "d",
        "w"
      ]
    },
    {
      "before": [
        ">"
      ],
      "after": [
        ">",
        ">"
      ]
    },
    {
      "before": [
        "<"
      ],
      "after": [
        "<",
        "<"
      ]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [
        ">"
      ],
      "commands": [
        "editor.action.indentLines"
      ]
    },
    {
      "before": [
        "<"
      ],
      "commands": [
        "editor.action.outdentLines"
      ]
    }
  ],
  "git.confirmSync": false,
  "window.zoomLevel": 0,
  "vls.languageServerPath": "/bin/vala-language-server",
  "cSpell.userWords": [
    "BESSY",
    "MADX",
    "Twiss",
    "quadrupoles"
  ],
  "workbench.colorTheme": "GitHub Light",
}